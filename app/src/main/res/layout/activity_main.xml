<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/fondo_reno"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/reno" />

    <TextView
        android:id="@+id/feliz_anyo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="119dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="casual"
        android:text="@string/feliz_anyo"
        android:textColor="@color/rojito"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dosmil_diecinueve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="123dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="casual"
        android:text="@string/dosmildiecinueve"
        android:textColor="@color/marroncete"
        android:textSize="70sp" />
</RelativeLayout>